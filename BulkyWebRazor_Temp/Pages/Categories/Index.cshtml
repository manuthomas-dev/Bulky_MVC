@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h5>Category List</h5>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-striped table-responsive table-bordered">
        <thead>
            <tr class="table-primary"><th>Order</th><th>Name</th><th>Action</th></tr>
        </thead>
        <tbody>
            @foreach (Models.Category category in Model.CategoryList.OrderBy(x => x.intDisplayOrder))
            {
                <tr>
                    <td>@category.intDisplayOrder</td>
                    <td>@category.strCategoryName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@category.intCategoryId" class="btn btn-outline-primary mx-2">
                                <i class="bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@category.intCategoryId" class="btn btn-outline-danger mx-2">
                                <i class="bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>